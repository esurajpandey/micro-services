{
  "compilerOptions": {
		"experimentalDecorators": true,
    "target": "es2018",       
    "module": "commonjs",                                /* Specify what module code is generated. */
    "rootDir": "./",
    "types": ["node"],
    "allowJs": true, 
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true, 
    "skipLibCheck": true,
  },
  "include": ["src/**/*"],
	"exclude": ["node_modules", "src/**/__tests__"]    
}